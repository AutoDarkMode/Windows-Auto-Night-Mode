<Page
    x:Class="AutoDarkModeApp.Views.TimePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:AutoDarkModeApp.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">
    <Page.Resources>
        <!--  These are converters for different controls  -->
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <helpers:EnumToIndexConverter x:Key="EnumToIndexConverter" />
        <helpers:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <ScrollViewer>
        <Grid x:Name="ContentArea">
            <StackPanel Style="{StaticResource PageBaseStackPanelStyle}">

                <!--  AutoThemeSwitching  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=Switch}" />
                <controls:SettingsCard Header="{helpers:ResourceString Name=EnableAutoThemeSwitch}" HeaderIcon="{ui:FontIcon Glyph=&#xE8AB;}">
                    <ToggleSwitch x:Name="ToggleAutoSwitchEnabled" IsOn="{x:Bind ViewModel.AutoThemeSwitchingEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <!--  Info about can't access loaction  -->
                <InfoBar
                    Title="{helpers:ResourceString Name=Info}"
                    IsOpen="{x:Bind ViewModel.IsNoLocationAccessInfoBarOpen, Mode=OneWay}"
                    Message="{helpers:ResourceString Name=Msg_LocPerm}"
                    Severity="Warning">
                    <InfoBar.ActionButton>
                        <Button Click="NoLocationAccessInfoBar_ActionButtonClick" Content="{helpers:ResourceString Name=OpenWindowsSettings}" />
                    </InfoBar.ActionButton>
                </InfoBar>

                <!--  About time  -->
                <controls:SettingsCard ContentAlignment="Vertical" Visibility="{x:Bind ViewModel.AutoThemeSwitchingEnabled, Mode=OneWay}">
                    <controls:SettingsCard.Description>
                        <StackPanel HorizontalAlignment="Stretch" Spacing="12">
                            <StackPanel Spacing="{StaticResource RadioButtonsRowSpacing}">
                                <RadioButton
                                    Command="{x:Bind ViewModel.SetTriggerModeCommand}"
                                    CommandParameter="CustomTimes"
                                    Content="{helpers:ResourceString Name=CustomHours}"
                                    GroupName="TriggerMode"
                                    IsChecked="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=CustomTimes, Mode=OneWay}" />
                                <RadioButton
                                    Command="{x:Bind ViewModel.SetTriggerModeCommand}"
                                    CommandParameter="LocationTimes"
                                    Content="{helpers:ResourceString Name=LocationService}"
                                    GroupName="TriggerMode"
                                    IsChecked="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=LocationTimes, Mode=OneWay}" />
                                <RadioButton
                                    Command="{x:Bind ViewModel.SetTriggerModeCommand}"
                                    CommandParameter="CoordinateTimes"
                                    Content="{helpers:ResourceString Name=LocationGeoService}"
                                    GroupName="TriggerMode"
                                    IsChecked="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=CoordinateTimes, Mode=OneWay}" />
                                <RadioButton
                                    Command="{x:Bind ViewModel.SetTriggerModeCommand}"
                                    CommandParameter="WindowsNightLight"
                                    Content="{helpers:ResourceString Name=FollowWindowsNightLight}"
                                    GroupName="TriggerMode"
                                    IsChecked="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=WindowsNightLight, Mode=OneWay}" />
                                <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <RadioButton
                                        Command="{x:Bind ViewModel.SetTriggerModeCommand}"
                                        CommandParameter="AmbientLight"
                                        Content="{helpers:ResourceString Name=AmbientLightSensor}"
                                        GroupName="TriggerMode"
                                        IsChecked="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=AmbientLight, Mode=OneWay}"
                                        IsEnabled="{x:Bind ViewModel.AmbientLightSensorAvailable, Mode=OneWay}" />
                                    <!--  Wrap Icon in Border for better hit testing  -->
                                    <Border Grid.Column="1" ToolTipService.ToolTip="{helpers:ResourceString Name=AmbientLightSensor_ToolTip}">
                                        <FontIcon
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Glyph="&#xE946;" />
                                    </Border>
                                </Grid>
                            </StackPanel>

                            <Border Style="{StaticResource DividerBorderStyle}" />

                            <!--  Custom Time  -->
                            <Grid
                                Grid.Column="0"
                                ColumnSpacing="8"
                                RowSpacing="16"
                                Visibility="{x:Bind ViewModel.TimePickerVisibility, Mode=OneWay}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.Resources>
                                    <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </Grid.Resources>

                                <!--  Light  -->
                                <FontIcon
                                    Grid.Column="0"
                                    FontSize="16"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xE706;" />
                                <TextBlock Grid.Column="1" Text="{helpers:ResourceString Name=Light}" />
                                <TimePicker
                                    Grid.Column="2"
                                    Margin="16,0,0,0"
                                    ClockIdentifier="{x:Bind ViewModel.TimePickHourClock, Mode=OneWay}"
                                    IsEnabled="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=CustomTimes, Mode=OneWay}"
                                    Time="{x:Bind ViewModel.TimeLightStart, Mode=TwoWay}" />
                                <!--  Dark  -->
                                <FontIcon
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="16"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xe708;" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Text="{helpers:ResourceString Name=Dark}" />
                                <TimePicker
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="16,0,0,0"
                                    ClockIdentifier="{x:Bind ViewModel.TimePickHourClock, Mode=OneWay}"
                                    IsEnabled="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=CustomTimes, Mode=OneWay}"
                                    Time="{x:Bind ViewModel.TimeDarkStart, Mode=TwoWay}" />
                            </Grid>

                            <Border Style="{StaticResource DividerBorderStyle}" Visibility="{x:Bind ViewModel.DividerBorderVisibility, Mode=OneWay}" />

                            <!--  Location  -->
                            <Grid
                                ColumnSpacing="8"
                                RowSpacing="16"
                                Visibility="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=LocationTimes, Mode=OneWay}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.Resources>
                                    <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock" />
                                    <Style TargetType="FontIcon">
                                        <Setter Property="FontSize" Value="16" />
                                    </Style>
                                </Grid.Resources>

                                <FontIcon Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" Glyph="&#xE707;" />
                                <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.LocationBlockText, Mode=OneWay}" />
                                <FontIcon
                                    Grid.Row="1"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xE895;" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Text="{x:Bind ViewModel.LocationNextUpdateDateDescription, Mode=OneWay}" />
                            </Grid>


                            <!--  Geo Coordinates  -->
                            <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=CoordinateTimes, Mode=OneWay}">
                                <Grid ColumnSpacing="8" RowSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.Resources>
                                        <Style BasedOn="{StaticResource BodyTextBlockStyle}" TargetType="TextBlock" />
                                        <Style TargetType="FontIcon">
                                            <Setter Property="FontSize" Value="16" />
                                        </Style>
                                    </Grid.Resources>

                                    <FontIcon Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" Glyph="&#xE707;" />
                                    <TextBlock Grid.Column="1" Text="{x:Bind ViewModel.LocationBlockText, Mode=OneWay}" />
                                    <FontIcon
                                        Grid.Row="1"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xE895;" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Text="{x:Bind ViewModel.LocationNextUpdateDateDescription, Mode=OneWay}" />
                                </Grid>


                                <Border Style="{StaticResource DividerBorderStyle}" />

                                <StackPanel Orientation="Horizontal" Spacing="24">
                                    <TextBox
                                        MinWidth="120"
                                        BeforeTextChanging="CoordinatesTextBox_BeforeTextChanging"
                                        Header="{helpers:ResourceString Name=Latitude}"
                                        InputScope="Number"
                                        Text="{x:Bind ViewModel.LatValue, Mode=TwoWay}" />
                                    <TextBox
                                        MinWidth="120"
                                        BeforeTextChanging="CoordinatesTextBox_BeforeTextChanging"
                                        Header="{helpers:ResourceString Name=Longitude}"
                                        InputScope="Number"
                                        Text="{x:Bind ViewModel.LonValue, Mode=TwoWay}" />
                                    <Button
                                        VerticalAlignment="Bottom"
                                        Command="{x:Bind ViewModel.SaveCoordinatesCommand}"
                                        Content="{helpers:ResourceString Name=ApplyGeo}" />
                                </StackPanel>

                                <HyperlinkButton
                                    Content="{helpers:ResourceString Name=GetCoordinates}"
                                    NavigateUri="https://www.latlong.net/"
                                    ToolTipService.ToolTip="latlong.net" />
                            </StackPanel>

                            <!--  Follow Windows Night Light  -->
                            <HyperlinkButton
                                Click="WindowsNightLightHyperlinkButton_Click"
                                Content="{helpers:ResourceString Name=OpenWindowsNightLight}"
                                Visibility="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=WindowsNightLight, Mode=OneWay}" />

                            <!--  Ambient Light Sensor  -->
                            <StackPanel
                                HorizontalAlignment="Stretch"
                                Spacing="16"
                                Visibility="{x:Bind ViewModel.SelectedTriggerMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=AmbientLight, Mode=OneWay}">
                                <!--  Description  -->
                                <TextBlock
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{helpers:ResourceString Name=AmbientLightThresholds_Description}"
                                    TextWrapping="Wrap" />

                                <!--  Current Lux Reading and Reference Guide  -->
                                <Grid HorizontalAlignment="Stretch" ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xE706;" />
                                    <TextBlock
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind ViewModel.CurrentLuxDescription, Mode=OneWay}" />
                                    <StackPanel
                                        Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <Button
                                            Command="{x:Bind ViewModel.AutoConfigureCommand}"
                                            Style="{StaticResource SubtleButtonStyle}"
                                            ToolTipService.ToolTip="{helpers:ResourceString Name=AmbientLightAutoConfigure_ToolTip}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="{StaticResource BodyTextBlockFontSize}"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Glyph="&#xE945;" />
                                                <TextBlock Text="{helpers:ResourceString Name=AmbientLightAutoConfigure}" />
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource SubtleButtonStyle}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="{StaticResource BodyTextBlockFontSize}"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Glyph="&#xE946;" />
                                                <TextBlock Text="{helpers:ResourceString Name=AmbientLightReference}" />
                                            </StackPanel>
                                            <Button.Flyout>
                                                <Flyout Placement="BottomEdgeAlignedRight">
                                                    <Grid ColumnSpacing="16" RowSpacing="4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="&lt; 1 lux" />
                                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_Moonlight}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="1 - 10 lux" />
                                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_VeryDark}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="10 - 50 lux" />
                                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_DimRoom}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="50 - 150 lux" />
                                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_LivingRoom}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="150 - 400 lux" />
                                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_Office}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="400 - 1000 lux" />
                                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_Overcast}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="1000 - 10000 lux" />
                                                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_DaylightShade}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                        <TextBlock Grid.Row="7" Grid.Column="0" Text="&gt; 10000 lux" />
                                                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{helpers:ResourceString Name=AmbientLightRef_DirectSun}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                    </Grid>
                                                </Flyout>
                                            </Button.Flyout>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <Border Style="{StaticResource DividerBorderStyle}" />

                                <!--  Range Selector with Thresholds  -->
                                <Grid HorizontalAlignment="Stretch" ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Indicator showing current lux level on the slider  -->
                                    <Canvas
                                        x:Name="IndicatorCanvas"
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="10,12,10,0"
                                        VerticalAlignment="Top"
                                        SizeChanged="IndicatorCanvas_SizeChanged">
                                        <FontIcon
                                            x:Name="CurrentLuxIndicator"
                                            FontSize="12"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                            Glyph="&#xE96E;" />
                                    </Canvas>

                                    <!--  Dark threshold NumberBox  -->
                                    <NumberBox
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Header="{helpers:ResourceString Name=AmbientLightDarkThreshold}"
                                        Maximum="10000"
                                        Minimum="1"
                                        SmallChange="1"
                                        SpinButtonPlacementMode="Compact"
                                        Value="{x:Bind ViewModel.AmbientLightDarkThreshold, Mode=TwoWay}" />
                                    <!--  Dark icon  -->
                                    <FontIcon
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,24,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xe708;" />

                                    <!--  Range Selector with colored gradient overlay  -->
                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Margin="0,24,0,0"
                                        VerticalAlignment="Center">
                                        <!--  Gradient background showing dark-to-light transition  -->
                                        <Border
                                            x:Name="RangeGradientBackground"
                                            Height="{StaticResource SliderTrackThemeHeight}"
                                            CornerRadius="{StaticResource SliderTrackCornerRadius}"
                                            IsHitTestVisible="False">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Offset="0.0" Color="#1A1A2E" />
                                                    <GradientStop Offset="0.15" Color="#16213E" />
                                                    <GradientStop Offset="0.35" Color="#1F4068" />
                                                    <GradientStop Offset="0.65" Color="#E8A87C" />
                                                    <GradientStop Offset="0.85" Color="#F9D56E" />
                                                    <GradientStop Offset="1.0" Color="#FFEB99" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>

                                        <!--  Range Selector (logarithmic scale for fine control at low values)  -->
                                        <controls:RangeSelector
                                            x:Name="AmbientLightRangeSelector"
                                            Background="Transparent"
                                            Foreground="Transparent"
                                            Loaded="AmbientLightRangeSelector_Loaded"
                                            Maximum="1000"
                                            Minimum="0"
                                            RangeEnd="{x:Bind ViewModel.RangeEnd, Mode=TwoWay}"
                                            RangeStart="{x:Bind ViewModel.RangeStart, Mode=TwoWay}"
                                            StepFrequency="1" />
                                    </Grid>

                                    <!--  Tick marks with lux reference labels (logarithmic positions)  -->
                                    <!--  Positions: 10lux=26%, 50lux=42.7%, 150lux=54.5%, 400lux=65.1%, 1000lux=75%  -->
                                    <!--  Margin accounts for RangeSelector thumb half-widths (20/2=10px each side)  -->
                                    <Grid
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Margin="10,2,10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="260*" />
                                            <ColumnDefinition Width="167*" />
                                            <ColumnDefinition Width="118*" />
                                            <ColumnDefinition Width="106*" />
                                            <ColumnDefinition Width="99*" />
                                            <ColumnDefinition Width="250*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  10 lux tick (at 26.0%)  -->
                                        <!--  Placed in Col 0, aligned right with negative margin to center  -->
                                        <StackPanel
                                            Grid.Column="0"
                                            Width="24"
                                            Margin="0,0,-12,0"
                                            HorizontalAlignment="Right"
                                            Spacing="2">
                                            <Border
                                                Width="1"
                                                Height="6"
                                                HorizontalAlignment="Center"
                                                Background="{ThemeResource TextFillColorTertiaryBrush}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                Text="10" />
                                        </StackPanel>

                                        <!--  50 lux tick (at 43%)  -->
                                        <!--  Placed in Col 1, aligned right  -->
                                        <StackPanel
                                            Grid.Column="1"
                                            Width="24"
                                            Margin="0,0,-12,0"
                                            HorizontalAlignment="Right"
                                            Spacing="2">
                                            <Border
                                                Width="1"
                                                Height="6"
                                                HorizontalAlignment="Center"
                                                Background="{ThemeResource TextFillColorTertiaryBrush}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                Text="50" />
                                        </StackPanel>

                                        <!--  150 lux tick (at 55%)  -->
                                        <StackPanel
                                            Grid.Column="2"
                                            Width="24"
                                            Margin="0,0,-12,0"
                                            HorizontalAlignment="Right"
                                            Spacing="2">
                                            <Border
                                                Width="1"
                                                Height="6"
                                                HorizontalAlignment="Center"
                                                Background="{ThemeResource TextFillColorTertiaryBrush}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                Text="150" />
                                        </StackPanel>

                                        <!--  400 lux tick (at 65%)  -->
                                        <StackPanel
                                            Grid.Column="3"
                                            Width="24"
                                            Margin="0,0,-12,0"
                                            HorizontalAlignment="Right"
                                            Spacing="2">
                                            <Border
                                                Width="1"
                                                Height="6"
                                                HorizontalAlignment="Center"
                                                Background="{ThemeResource TextFillColorTertiaryBrush}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                Text="400" />
                                        </StackPanel>

                                        <!--  1000 lux tick (at 75%)  -->
                                        <StackPanel
                                            Grid.Column="4"
                                            Width="24"
                                            Margin="0,0,-12,0"
                                            HorizontalAlignment="Right"
                                            Spacing="2">
                                            <Border
                                                Width="1"
                                                Height="6"
                                                HorizontalAlignment="Center"
                                                Background="{ThemeResource TextFillColorTertiaryBrush}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                Text="1k" />
                                        </StackPanel>
                                    </Grid>

                                    <!--  Light icon  -->
                                    <FontIcon
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        Margin="0,24,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xE706;" />
                                    <!--  Light threshold NumberBox  -->
                                    <NumberBox
                                        Grid.Row="1"
                                        Grid.Column="4"
                                        Margin="0,0,12,0"
                                        Header="{helpers:ResourceString Name=AmbientLightLightThreshold}"
                                        Maximum="10000"
                                        Minimum="1"
                                        SmallChange="10"
                                        SpinButtonPlacementMode="Compact"
                                        Value="{x:Bind ViewModel.AmbientLightLightThreshold, Mode=TwoWay}" />
                                </Grid>

                            </StackPanel>

                        </StackPanel>
                    </controls:SettingsCard.Description>
                </controls:SettingsCard>

                <!--  Offset time  -->
                <StackPanel Spacing="{StaticResource SettingsCardSpacing}" Visibility="{x:Bind ViewModel.OffsetTimeSettingsCardVisibility, Mode=OneWay}">
                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=Offset}" />
                    <controls:SettingsCard
                        Description="{helpers:ResourceString Name=OffsetTime_Description}"
                        Header="{helpers:ResourceString Name=OffsetTime_Header}"
                        IsEnabled="{x:Bind ViewModel.AutoThemeSwitchingEnabled, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="24">
                            <NumberBox
                                MinWidth="120"
                                Header="{helpers:ResourceString Name=Light}"
                                LargeChange="10"
                                Maximum="720"
                                Minimum="{x:Bind ViewModel.OffsetTimesMinimum, Mode=OneWay}"
                                SmallChange="1"
                                SpinButtonPlacementMode="Inline"
                                Value="{x:Bind ViewModel.OffsetLight, Mode=TwoWay}" />
                            <NumberBox
                                MinWidth="120"
                                Header="{helpers:ResourceString Name=Dark}"
                                LargeChange="10"
                                Maximum="720"
                                Minimum="{x:Bind ViewModel.OffsetTimesMinimum, Mode=OneWay}"
                                SmallChange="1"
                                SpinButtonPlacementMode="Inline"
                                Value="{x:Bind ViewModel.OffsetDark, Mode=TwoWay}" />
                        </StackPanel>
                    </controls:SettingsCard>
                </StackPanel>

                <!--  Postpone  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=PostponeControl}" />
                <controls:SettingsCard IsEnabled="{x:Bind ViewModel.AutoThemeSwitchingEnabled, Mode=OneWay}">
                    <controls:SettingsCard.Description>
                        <Grid ColumnSpacing="8" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ComboBox
                                Grid.Row="0"
                                Grid.Column="0"
                                MinWidth="120"
                                IsEnabled="{x:Bind ViewModel.IsPostponed, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                                SelectedIndex="{x:Bind ViewModel.SelectedPostponeIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_15}" />
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_30}" />
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_60}" />
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_120}" />
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_180}" />
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_360}" />
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_720}" />
                                <ComboBoxItem Content="{helpers:ResourceString Name=PostponeTime_SkipOnce}" IsSelected="True" />
                            </ComboBox>
                            <ToggleSwitch
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,-24,0"
                                IsOn="{x:Bind ViewModel.IsPostponed, Mode=TwoWay}"
                                OffContent="{helpers:ResourceString Name=NotDelayed}"
                                OnContent="{helpers:ResourceString Name=Delayed}" />

                            <Border
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource DividerBorderStyle}" />

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Spacing="8">
                                <FontIcon
                                    FontSize="{StaticResource BodyTextBlockFontSize}"
                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                    Glyph="&#xECC5;" />
                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.PostponeInfoText, Mode=OneWay}" />
                            </StackPanel>
                        </Grid>
                    </controls:SettingsCard.Description>
                </controls:SettingsCard>
                <InfoBar
                    Content="{helpers:ResourceString Name=ResumeInfo_Content}"
                    IsClosable="False"
                    IsOpen="{x:Bind ViewModel.ResumeInfoBarEnabled, Mode=OneWay}" />

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
