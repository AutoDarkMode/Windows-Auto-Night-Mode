<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Thickness x:Key="NavigationViewHeaderMargin">24,24,24,12</Thickness>
    <Thickness x:Key="NavigationViewPageContentMargin">24</Thickness>
    
    <!-- StackPanel style for the base page layout -->
    <Style x:Key="PageBaseStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="{StaticResource SettingsCardSpacing}" />
        <Setter Property="MaxWidth" Value="1000" />
    </Style>
    
    <!-- Settings -->
    <x:Double x:Key="SettingsCardSpacing">4</x:Double>
    
    <Style
        x:Key="SettingsSectionHeaderTextBlockStyle"
        BasedOn="{StaticResource BodyStrongTextBlockStyle}"
        TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin" Value="0,16,0,8" />
        </Style.Setters>
    </Style>
    
</ResourceDictionary>
