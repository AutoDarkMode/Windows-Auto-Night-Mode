<windowex:WindowEx
    x:Class="AutoDarkModeApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:AutoDarkModeApp.Helpers"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:AutoDarkModeApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:windowex="using:WinUIEx"
    Width="780"
    Height="640"
    MinWidth="680"
    MinHeight="320"
    PersistenceId="MainWindow"
    mc:Ignorable="d">
    <!--  TO DO: use the new MinWidth/MinHeight AppWindow APIs in 1.7 Stable  -->
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar
            x:Name="TitleBar"
            Title="Auto Dark Mode X"
            Height="{StaticResource TitleBarExpandedHeight}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BackRequested="NavViewTitleBar_BackRequested"
            IsBackButtonEnabled="{x:Bind NavigationFrame.CanGoBack, Mode=OneWay}"
            IsBackButtonVisible="True"
            IsHitTestVisible="True"
            IsPaneToggleButtonVisible="True"
            PaneToggleRequested="NavViewTitleBar_PaneToggleRequested">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/Assets/AutoDarkModeIcon.ico" />
            </TitleBar.IconSource>
        </TitleBar>

        <NavigationView
            x:Name="NavigationViewControl"
            Grid.Row="1"
            Header="{x:Bind NavigationFrame.Content, Mode=OneWay}"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="True"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="True"
            ItemInvoked="NavigationViewControl_ItemInvoked"
            Loaded="NavigationViewControl_Loaded"
            OpenPaneLength="240"
            PaneDisplayMode="Auto">
            <NavigationView.MenuItems>
                <!--
              TODO: Update item titles by updating <x:Uid>.Content entries in Strings/en-us/Resources.resw.
              https://docs.microsoft.com/windows/uwp/app-resources/localize-strings-ui-manifest#refer-to-a-string-resource-identifier-from-xaml

              TODO: Update item icons by updating FontIcon.Glyph properties.
              https://docs.microsoft.com/windows/apps/design/style/segoe-fluent-icons-font#icon-list
                -->
                <NavigationViewItem Content="{helpers:ResourceString Name=NavbarTime}" Tag="TimePage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE823;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="{helpers:ResourceString Name=NavbarSwitchModes}" Tag="SwitchModesPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE945;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="{helpers:ResourceString Name=NavbarApps}" Tag="AppsPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE71D;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="{helpers:ResourceString Name=NavbarPersonalization}" Tag="PersonalizationPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE771;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="{helpers:ResourceString Name=NavbarScripts}" Tag="ScriptsPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xF000;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="{helpers:ResourceString Name=NavbarDonation}" Tag="DonationPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEB51;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="{helpers:ResourceString Name=NavbarAbout}" Tag="AboutPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE946;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            <!--<NavigationView.PaneFooter>
                <TextBlock
                    x:Name="VersionTextBlock"
                    Text="{x:Bind helpers:AppInfo.Version, Mode=OneWay}"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}" />
            </NavigationView.PaneFooter>-->
            <ScrollViewer>
                <Frame x:Name="NavigationFrame" NavigationFailed="ContentFrame_NavigationFailed" />
            </ScrollViewer>
        </NavigationView>
    </Grid>
</windowex:WindowEx>
