<UserControl
    x:Class="AutoDarkModeApp.UserControls.ColorPickerDialogContentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:AutoDarkModeApp.Helpers"
    xmlns:local="using:AutoDarkModeApp.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <helpers:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <helpers:ColorToHoverBrushConverter x:Key="ColorToHoverBrushConverter" />
    </UserControl.Resources>

    <ScrollViewer>
        <StackPanel Padding="16" Spacing="8">
            <ColorPicker x:Name="DialogContentColorPicker" IsMoreButtonVisible="True" />

            <TextBlock Text="{helpers:ResourceString Name=ColorPreview}" />
            <Grid ColumnSpacing="4" RowSpacing="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    Height="40"
                    Background="{x:Bind DialogContentColorPicker.Color, Mode=OneWay, Converter={StaticResource ColorToBrushConverter}}"
                    CornerRadius="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="{helpers:ResourceString Name=Preview}" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="40"
                    Background="{x:Bind DialogContentColorPicker.Color, Mode=OneWay, Converter={StaticResource ColorToHoverBrushConverter}}"
                    CornerRadius="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{x:Bind DialogContentColorPicker.Color, Mode=OneWay, Converter={StaticResource ColorToBrushConverter}}"
                        Text="{helpers:ResourceString Name=Preview}" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="40"
                    Background="{ThemeResource SystemChromeLowColor}"
                    CornerRadius="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{x:Bind DialogContentColorPicker.Color, Mode=OneWay, Converter={StaticResource ColorToBrushConverter}}"
                        Text="{helpers:ResourceString Name=Preview}" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="40"
                    Background="{ThemeResource TextFillColorPrimaryBrush}"
                    CornerRadius="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{x:Bind DialogContentColorPicker.Color, Mode=OneWay, Converter={StaticResource ColorToBrushConverter}}"
                        Text="{helpers:ResourceString Name=Preview}" />
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>

</UserControl>
