                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Name="FluentWPFLicense"
                       FontSize="14"
                       HorizontalAlignment="Left"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"
                       Text="FluentWPF"
                       VerticalAlignment="Top"
                       Focusable="True"
                       MouseDown="FluentWPFLicense_MouseDown"
                       KeyDown="FluentWPFLicense_KeyDown">
